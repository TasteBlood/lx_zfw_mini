          <image class="icon-36" src='../res/ic_jiangli.png' mode='asceptFill'></image>
          <text style="margin-left:20rpx;width:85%">奖励内容</text>
          <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
        <view class="menu" @tap='skipTo' data-type='about'>
          <image class="icon-36" src='../res/ic_about.png' mode='asceptFill'></image>
          <text style="margin-left:20rpx;width:85%">关于我们</text>
          <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
      </view>
    </view>
</template>
<script>
import wepy from 'wepy'
import {wxLogin} from '../utils/api';
export default class Mine extends wepy.page {
  config = {
    navigationBarTitleText:'兰州政法委小程序',
    navigationBarTextStyle:'white',
    navigationBarBackgroundColor:'#2F23D1',
    disableScroll: true,
  };
  data = {
    userInfo:wx.getStorageSync('login_user'),
  };
  methods = {
    async onGetUserInfo(e){
      console.log(e);
      //在这里登录
      let res = await wxLogin(wx.getStorageSync('login_code'),e.detail.userInfo.nickName,e.detail.userInfo.avatarUrl);
      // console.log(res);
      if(res.status===1){
        wx.setStorageSync("login_user", res.info);
        this.userInfo = res.info;
        this.$apply();
      }
    },
    skipTo(e){
      switch(e.currentTarget.dataset.type){
        case 'record':
          if(!this.userInfo){
            wepy.showToast({
              title: '请登录', //提示的内容,
              icon: 'none', //图标,
              duration: 1000, //延迟时间,
              mask: true, //显示透明蒙层，防止触摸穿透,
              success: res => {}
            });
          }
          wepy.navigateTo({ url: './jubao_record' });
          
          break;
        case 'xiaofei':
          if(!this.userInfo){
            wepy.showToast({
              title: '请登录', //提示的内容,
              icon: 'none', //图标,
              duration: 1000, //延迟时间,
              mask: true, //显示透明蒙层，防止触摸穿透,
              success: res => {}
            });
            
          }
          break;
        case 'laiyuan':
          if(!this.userInfo){
            wepy.showToast({
              title: '请登录', //提示的内容,
              icon: 'none', //图标,
              duration: 1000, //延迟时间,
              mask: true, //显示透明蒙层，防止触摸穿透,
              success: res => {}
            });
            
          }
          break;
        case 'jiangli':
          if(!this.userInfo){
            wepy.showToast({
              title: '请登录', //提示的内容,
              icon: 'none', //图标,
              duration: 1000, //延迟时间,
              mask: true, //显示透明蒙层，防止触摸穿透,
              success: res => {}
            });
            
          }
          break;
        case 'about':
          wx.navigateTo({
            url: './about'
          })
          break;
      }
    }
  };

  onLoad(){
    wepy.login({
      success: res => {
        wx.setStorageSync("login_code", res.code);
      },
      fail: () => {},
      complete: () => {}
    });
    
  }
}
</script>
