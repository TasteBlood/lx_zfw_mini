<template>
    <view class="container">
      <view class="user-info">
        <view class="top-bg" mode='asceptFill'></view>
        <view class="user" wx:if='{{userInfo}}'>
          <image src='{{userInfo.headImg}}' class="avatar" moed='asceptFill'></image>
          <text style="margin-top:20rpx;color:white">{{userInfo.nick}}</text>
        </view>
        <view class="auth" wx:else>
            <button class="btn-auth" open-type='getUserInfo' lang='zh_CN' @getuserinfo='onGetUserInfo'>授权登录</button>
        </view>
      </view>
      <view class="menu-panel">
        <view class="menu" @tap='skipTo' data-type='record'>
            <image class="icon-36" src='../res/ic_record.png' mode='asceptFill'></image>
            <text style="margin-left:20rpx;width:85%">举报记录</text>
            <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
        <view class="menu" @tap='skipTo' data-type='fankui'>
            <image class="icon-36" src='../res/ic_fankui.png' mode='asceptFill'></image>
            <text style="margin-left:20rpx;width:85%">举报反馈</text>
            <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
        <view class="menu" @tap='skipTo' data-type='xiaofei'>
          <image class="icon-36" src='../res/ic_xiaofei.png' mode='asceptFill'></image>
          <text style="margin-left:20rpx;width:85%">积分消费</text>
          <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
        <view class="menu" @tap='skipTo' data-type='laiyuan'>
          <image class="icon-36" src='../res/ic_laiyuan.png' mode='asceptFill'></image>
          <text style="margin-left:20rpx;width:85%">积分来源</text>
          <image class="icon-36" src='../res/ic_next.png' mode='asceptFill'></image>
        </view>
